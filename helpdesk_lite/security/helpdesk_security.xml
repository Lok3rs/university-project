<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_category_helpdesk_lite" model="ir.module.category">
        <field name="name">Helpdesk Lite</field>
        <field name="sequence">30</field>
    </record>

    <record id="group_helpdesk_user" model="res.groups">
        <field name="name">Helpdesk User</field>
        <field name="category_id" ref="helpdesk_lite.module_category_helpdesk_lite"/>
    </record>

    <record id="group_helpdesk_manager" model="res.groups">
        <field name="name">Helpdesk Manager</field>
        <field name="category_id" ref="helpdesk_lite.module_category_helpdesk_lite"/>
        <field name="implied_ids" eval="[(4, ref('helpdesk_lite.group_helpdesk_user'))]"/>
    </record>
</odoo>
