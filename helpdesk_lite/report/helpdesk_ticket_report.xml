<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_helpdesk_ticket_list">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="tkt">
                <t t-set="_dummy" t-value="0"/>
            </t>
            <t t-call="web.external_layout">
                <div class="page">
                    <h2>Helpdesk Ticket List</h2>
                    <table class="table table-sm table-bordered o_main_table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Customer</th>
                                <th>Assignee</th>
                                <th>Priority</th>
                                <th>Stage</th>
                                <th>SLA</th>
                                <th>Age</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="docs" t-as="tkt">
                                <tr>
                                    <td t-esc="tkt.name"/>
                                    <td t-esc="tkt.partner_id.display_name or ''"/>
                                    <td t-esc="tkt.assignee_id.display_name or ''"/>
                                    <td t-esc="tkt.priority"/>
                                    <td t-esc="tkt.stage"/>
                                    <td t-esc="tkt.sla_deadline or ''"/>
                                    <td t-esc="tkt._get_age_str()"/>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
