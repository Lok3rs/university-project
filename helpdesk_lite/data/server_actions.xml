<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Server action to export CSV (manager only) -->
    <record id="server_action_helpdesk_export_csv" model="ir.actions.server">
        <field name="name">Export Tickets CSV</field>
        <field name="model_id" ref="model_helpdesk_ticket"/>
        <field name="state">code</field>
        <field name="code">action = records.action_export_csv()</field>
        <field name="binding_model_id" ref="model_helpdesk_ticket"/>
        <field name="binding_type">action</field>
        <field name="groups_id" eval="[(4, ref('helpdesk_lite.group_helpdesk_manager'))]"/>
    </record>
</odoo>
