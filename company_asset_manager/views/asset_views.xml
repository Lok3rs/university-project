<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree view for Assets -->
    <record id="view_company_asset_tree" model="ir.ui.view">
        <field name="name">company.asset.tree</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <list string="Assets" create="1" edit="1">
                <field name="name"/>
                <field name="category"/>
                <field name="serial_no"/>
                <field name="employee_id"/>
                <field name="status"/>
                <field name="next_service_date"/>
                <field name="purchase_date"/>
            </list>
        </field>
    </record>

    <!-- Kanban view for Assets -->
    <record id="view_company_asset_kanban" model="ir.ui.view">
        <field name="name">company.asset.kanban</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <kanban default_group_by="status">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_title">
                                <field name="name"/>
                            </div>
                            <div class="o_kanban_details">
                                <span><strong>Category:</strong> <field name="category"/></span><br/>
                                <span><strong>Serial:</strong> <field name="serial_no"/></span><br/>
                                <span><strong>Assigned:</strong> <field name="employee_id"/></span><br/>
                                <span><strong>Next Service:</strong> <field name="next_service_date"/></span>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_company_asset_search" model="ir.ui.view">
        <field name="name">company.asset.search</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <search string="Search Assets">
                <field name="name"/>
                <filter name="filter_in_use" string="In Use" domain="[('status','=','in_use')]"/>
                <filter name="filter_in_service" string="In Service" domain="[('status','=','in_service')]"/>
                <filter name="filter_retired" string="Retired" domain="[('status','=','retired')]"/>
                <filter name="filter_cat_laptop" string="Laptops" domain="[('category','=','laptop')]"/>
                <filter name="filter_cat_phone" string="Phones" domain="[('category','=','phone')]"/>
                <filter name="filter_cat_networking" string="Networking" domain="[('category','=','networking')]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter name="group_employee" string="Employee" context="{'group_by':'employee_id'}"/>
                    <filter name="group_category" string="Category" context="{'group_by':'category'}"/>
                    <filter name="group_status" string="Status" context="{'group_by':'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Form view with chatter and smart buttons -->
    <record id="view_company_asset_form" model="ir.ui.view">
        <field name="name">company.asset.form</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <button name="action_assign_wizard" string="Assign to Employee" type="object" class="oe_highlight"/>
                    <field name="status" widget="statusbar" statusbar_visible="in_use,in_service,retired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" name="action_view_services" type="object" icon="fa-wrench" invisible="not id">
                            <field name="service_count" widget="statinfo" string="Services"/>
                        </button>
                        <button class="oe_stat_button" name="action_view_attachments" type="object" icon="fa-paperclip" invisible="not id">
                            <span class="o_stat_text">Attachments</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="category"/>
                            <field name="serial_no"/>
                            <field name="employee_id"/>
                        </group>
                        <group>
                            <field name="purchase_date"/>
                            <field name="warranty_months"/>
                            <field name="service_interval_months"/>
                            <field name="next_service_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                        <page string="Services">
                            <field name="service_ids" context="{'default_asset_id': active_id}" mode="list,form">
                                <list editable="bottom">
                                    <field name="service_date"/>
                                    <field name="description"/>
                                    <field name="cost"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="service_date"/>
                                        <field name="description"/>
                                        <field name="cost"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>

    <!-- Pivot and Graph views for reporting -->
    <record id="view_company_asset_pivot" model="ir.ui.view">
        <field name="name">company.asset.pivot</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <pivot string="Assets">
                <field name="category" type="row"/>
                <field name="status" type="col"/>
                <field name="employee_id"/>
            </pivot>
        </field>
    </record>

    <record id="view_company_asset_graph" model="ir.ui.view">
        <field name="name">company.asset.graph</field>
        <field name="model">company.asset</field>
        <field name="arch" type="xml">
            <graph string="Assets" type="bar">
                <field name="employee_id" type="row"/>
                <field name="category" type="col"/>
            </graph>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_company_assets" model="ir.actions.act_window">
        <field name="name">Assets</field>
        <field name="res_model">company.asset</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
        <field name="search_view_id" ref="view_company_asset_search"/>
        <field name="context">{"search_default_group_status": 1}</field>
    </record>

    <record id="action_company_asset_reporting" model="ir.actions.act_window">
        <field name="name">Asset Reporting</field>
        <field name="res_model">company.asset</field>
        <field name="view_mode">pivot,graph</field>
    </record>
</odoo>
