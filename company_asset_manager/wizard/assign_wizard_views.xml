<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Assign to Employee Wizard View -->
    <record id="view_company_asset_assign_wizard" model="ir.ui.view">
        <field name="name">company.asset.assign.wizard.form</field>
        <field name="model">company.asset.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign to Employee">
                <sheet>
                    <group>
                        <field name="asset_id" invisible="1"/>
                        <field name="employee_id" options="{'no_create_edit': True}"/>
                        <field name="note" placeholder="Optional note"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Assign" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
